# Multi-stage Dockerfile for llm-service-rs
# Stage 1: Build
FROM rust:1.75 as builder

# Install protoc (Protocol Buffers compiler)
RUN apt-get update && apt-get install -y \
    protobuf-compiler \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy workspace files
COPY Cargo.toml Cargo.lock ./
COPY .proto ./.proto/
COPY llm-service-rs ./llm-service-rs/

# Build the service
WORKDIR /app/llm-service-rs
RUN cargo build --release

# Stage 2: Runtime
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy the binary from builder
COPY --from=builder /app/llm-service-rs/target/release/llm-service-rs /app/llm-service-rs

# Copy proto files for runtime reference
COPY --from=builder /app/.proto ./.proto/

EXPOSE 50053

CMD ["./llm-service-rs"]

