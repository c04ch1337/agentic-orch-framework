# ==============================================================
# PHOENIX ORCH AGI System Environment Configuration - DEVELOPMENT
# ==============================================================
#
# IMPORTANT SECURITY NOTICE: 
# Even in development, you should avoid storing sensitive values in this file.
# Use the secrets-service-rs with HashiCorp Vault in all environments.
#
# This file contains DEVELOPMENT-SPECIFIC configurations.
# ==============================================================

# ------------------------------------------------------------
# Secrets Management Configuration
# ------------------------------------------------------------
# Development Vault server (typically running locally)
VAULT_ADDR=http://localhost:8200
# Development Vault token - for dev only, rotate frequently
VAULT_ROLE_ID=dev-role-id
VAULT_SECRET_ID=dev-secret-id
VAULT_AUTH_METHOD=approle
SECRETS_SERVICE_PORT=50080

# Development service secrets (regenerate these regularly)
LLM_SERVICE_SECRET=dev-llm-service-secret
API_GATEWAY_SECRET=dev-api-gateway-secret

# ------------------------------------------------------------
# LLM Service Configuration - DEVELOPMENT
# ------------------------------------------------------------
# For development, we use lower-cost models and trial accounts
LLM_API_URL=https://openrouter.ai/api/v1/chat/completions
# Placeholder - retrieve from Vault in development too
LLM_API_KEY=PLACEHOLDER_API_KEY
# Use smaller/cheaper model for development
LLM_MODEL=anthropic/claude-instant-1

# Development database settings
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=mind_kb_dev
VECTOR_SIZE=1536

# Retry Configuration - More aggressive for dev
LLM_MAX_RETRIES=2
LLM_INITIAL_RETRY_DELAY_MS=500
LLM_MAX_RETRY_DELAY_MS=5000

# ============================================================
# Docker Port Configuration - DEVELOPMENT
# ============================================================

# Use standard ports for development
ORCHESTRATOR_PORT=50051
DATA_ROUTER_PORT=50052
LLM_SERVICE_PORT=50053
TOOLS_SERVICE_PORT=50054
SAFETY_SERVICE_PORT=50055
LOGGING_SERVICE_PORT=50056
MIND_KB_PORT=50057
BODY_KB_PORT=50058
HEART_KB_PORT=50059
SOCIAL_KB_PORT=50060
SOUL_KB_PORT=50061
EXECUTOR_PORT=50062
CONTEXT_MANAGER_PORT=50064
REFLECTION_PORT=50065
SCHEDULER_PORT=50066
AGENT_REGISTRY_PORT=50067
RED_TEAM_PORT=50068
BLUE_TEAM_PORT=50069
API_GATEWAY_PORT=8282

# API Gateway development key
API_KEY=PLACEHOLDER_DO_NOT_USE_THIS_DEFAULT_VALUE

# Development logging - more verbose
RUST_LOG=debug

# ============================================================
# Development agent customization - minimal settings
# ============================================================
AGENT_NAME="PHOENIX ORCH DEV"
AGENT_PURPOSE="Development and testing instance"

# Minimal personality settings for development
AGENT_PERSONALITY_TEMPERATURE=1.0
