# ==============================================================
# PHOENIX ORCH AGI System Environment Configuration - STAGING
# ==============================================================
#
# IMPORTANT SECURITY NOTICE: 
# This file should NOT contain actual sensitive credentials.
# All sensitive values should be stored in HashiCorp Vault.
#
# This file contains STAGING-SPECIFIC configurations.
# ==============================================================

# ------------------------------------------------------------
# Secrets Management Configuration
# ------------------------------------------------------------
# Staging Vault server
VAULT_ADDR=https://vault.staging.example.com:8200
VAULT_ROLE_ID=REPLACE_WITH_STAGING_ROLE_ID
VAULT_SECRET_ID=REPLACE_WITH_STAGING_SECRET_ID
VAULT_AUTH_METHOD=approle
SECRETS_SERVICE_PORT=50080

# Staging service identifiers (secrets should be in Vault)
LLM_SERVICE_SECRET=PLACEHOLDER_REPLACE_WITH_STAGING_SECRET
API_GATEWAY_SECRET=PLACEHOLDER_REPLACE_WITH_STAGING_SECRET

# ------------------------------------------------------------
# LLM Service Configuration - STAGING
# ------------------------------------------------------------
# Production-equivalent settings but with rate limits
LLM_API_URL=https://openrouter.ai/api/v1/chat/completions
# Placeholder - actual credentials stored in Vault
LLM_API_KEY=PLACEHOLDER_API_KEY
# Use mid-tier model for staging
LLM_MODEL=anthropic/claude-3-opus

# Staging database settings
QDRANT_URL=http://qdrant.staging.svc:6333
QDRANT_COLLECTION=mind_kb_staging
VECTOR_SIZE=1536

# More production-like retry settings
LLM_MAX_RETRIES=3
LLM_INITIAL_RETRY_DELAY_MS=1000
LLM_MAX_RETRY_DELAY_MS=30000

# ============================================================
# Docker Port Configuration - STAGING
# ============================================================
# Standard internal service ports
ORCHESTRATOR_PORT=50051
DATA_ROUTER_PORT=50052
LLM_SERVICE_PORT=50053
TOOLS_SERVICE_PORT=50054
SAFETY_SERVICE_PORT=50055
LOGGING_SERVICE_PORT=50056
MIND_KB_PORT=50057
BODY_KB_PORT=50058
HEART_KB_PORT=50059
SOCIAL_KB_PORT=50060
SOUL_KB_PORT=50061
EXECUTOR_PORT=50062
CONTEXT_MANAGER_PORT=50064
REFLECTION_PORT=50065
SCHEDULER_PORT=50066
AGENT_REGISTRY_PORT=50067
RED_TEAM_PORT=50068
BLUE_TEAM_PORT=50069
API_GATEWAY_PORT=8282

# API Gateway authentication
API_KEY=PLACEHOLDER_DO_NOT_USE_THIS_DEFAULT_VALUE

# Staging logging level - balanced
RUST_LOG=info

# ============================================================
# Staging agent customization - closer to production values
# ============================================================
AGENT_NAME="PHOENIX ORCH: Staging Environment"
AGENT_PURPOSE="Staging and validation testing"

# Full production-equivalent personality settings
AGENT_PERSONALITY_OPENNESS=7
AGENT_PERSONALITY_CONSCIENTIOUSNESS=8
AGENT_PERSONALITY_EXTRAVERSION=6
AGENT_PERSONALITY_AGREEABLENESS=7
AGENT_PERSONALITY_STABILITY=9
AGENT_PERSONALITY_FORMALITY=5
AGENT_PERSONALITY_VERBOSITY=5
AGENT_PERSONALITY_CREATIVITY=6
AGENT_PERSONALITY_HUMOR=4
AGENT_PERSONALITY_TEMPERATURE=0.7
AGENT_PERSONALITY_REFLECTION_DEPTH=7
AGENT_PERSONALITY_CONFIDENCE=7