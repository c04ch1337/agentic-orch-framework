# Multi-stage build template for Phoenix ORCH services
# Stage 1: Builder - compile the application
FROM rust:1.75-slim AS builder

# Install build dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    protobuf-compiler \
    ca-certificates \
    pkg-config \
    libssl-dev && \
    rm -rf /var/lib/apt/lists/*

# Create app directories
WORKDIR /app

# Copy only manifests first to leverage Docker caching
COPY Cargo.toml Cargo.lock ./
COPY .proto ./.proto/
# Replace SERVICE_NAME with the actual service directory name
COPY SERVICE_NAME/Cargo.toml ./SERVICE_NAME/

# Create placeholder for dependency caching
RUN mkdir -p SERVICE_NAME/src && \
    echo 'fn main() { println!("Dependency cache placeholder"); }' > SERVICE_NAME/src/main.rs && \
    cargo build --release -p SERVICE_NAME && \
    rm -rf SERVICE_NAME/src

# Copy actual source code
COPY SERVICE_NAME/src ./SERVICE_NAME/src
COPY SERVICE_NAME/build.rs ./SERVICE_NAME/build.rs

# Build for release with optimizations
WORKDIR /app
RUN cargo build --release -p SERVICE_NAME

# Stage 2: Audit - scan for vulnerabilities
FROM builder AS audit
RUN cargo install cargo-audit
WORKDIR /app
# Run security audit on dependencies
RUN cargo audit

# Stage 3: Runtime - minimal distroless container
FROM gcr.io/distroless/cc AS runtime

# Create unprivileged user
# Note: In distroless, we need to use numeric user IDs as there's no useradd
# Using 1000:1000 which is a standard unprivileged user:group ID
USER 1000:1000

# Create app directories (these will be created in the builder and copied over)
WORKDIR /app

# Copy binary from builder stage
COPY --from=builder --chown=1000:1000 /app/target/release/SERVICE_NAME /app/SERVICE_NAME

# Copy proto files needed at runtime
COPY --from=builder --chown=1000:1000 /app/.proto ./.proto/

# Expose the port (replace 50000 with the actual service port)
EXPOSE 50000

# Add healthcheck
# Note: Distroless doesn't include wget/curl - health checks will need to be handled externally
# or using a custom binary packed into the image

# Set security flags
ENV DOCKER_CONTENT_TRUST=1

# Run with security options
ENTRYPOINT ["/app/SERVICE_NAME"]

# Label the image for better identification and metadata
LABEL org.opencontainers.image.title="SERVICE_TITLE"
LABEL org.opencontainers.image.description="Phoenix ORCH SERVICE_TITLE - Secure Service (Hardened)"
LABEL org.opencontainers.image.vendor="Phoenix ORCH"
LABEL org.opencontainers.image.version="1.0.0"
LABEL org.opencontainers.image.created="2025-12-09"
LABEL org.opencontainers.image.source="https://github.com/phoenixorch"
LABEL org.opencontainers.image.licenses="Proprietary"