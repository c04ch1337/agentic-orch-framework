# ==============================================================
# PHOENIX ORCH AGI System Environment Configuration - PRODUCTION
# ==============================================================
#
# IMPORTANT SECURITY NOTICE: 
# This file should NEVER contain actual sensitive credentials.
# All sensitive values MUST be stored in HashiCorp Vault.
#
# This file contains PRODUCTION-SPECIFIC non-sensitive configurations.
# ==============================================================

# ------------------------------------------------------------
# Secrets Management Configuration
# ------------------------------------------------------------
# Production Vault server - use proper TLS
VAULT_ADDR=https://vault.prod.example.com:8200
# These values should be securely provided at deployment time
VAULT_ROLE_ID=REPLACE_ME_AT_DEPLOYMENT_TIME
VAULT_SECRET_ID=REPLACE_ME_AT_DEPLOYMENT_TIME
# Production should use AppRole or Kubernetes authentication
VAULT_AUTH_METHOD=approle
# Production may use a namespace in Vault Enterprise
# VAULT_NAMESPACE=prod
SECRETS_SERVICE_PORT=50080

# Production service identifiers (all secrets in Vault)
LLM_SERVICE_SECRET=REPLACE_ME_AT_DEPLOYMENT_TIME
API_GATEWAY_SECRET=REPLACE_ME_AT_DEPLOYMENT_TIME

# ------------------------------------------------------------
# LLM Service Configuration - PRODUCTION
# ------------------------------------------------------------
# Production-grade LLM API settings
LLM_API_URL=https://openrouter.ai/api/v1/chat/completions
# Placeholder - actual credentials must be in Vault
LLM_API_KEY=REPLACE_ME_AT_DEPLOYMENT_TIME
# Use highest capability model for production
LLM_MODEL=anthropic/claude-3.5-sonnet

# Production database - use TLS
QDRANT_URL=https://qdrant.prod.svc:6333
QDRANT_COLLECTION=mind_kb
VECTOR_SIZE=1536

# Standard production retry settings
LLM_MAX_RETRIES=3
LLM_INITIAL_RETRY_DELAY_MS=1000
LLM_MAX_RETRY_DELAY_MS=30000

# ============================================================
# Docker Port Configuration - PRODUCTION
# ============================================================
# Standard internal service ports
ORCHESTRATOR_PORT=50051
DATA_ROUTER_PORT=50052
LLM_SERVICE_PORT=50053
TOOLS_SERVICE_PORT=50054
SAFETY_SERVICE_PORT=50055
LOGGING_SERVICE_PORT=50056
MIND_KB_PORT=50057
BODY_KB_PORT=50058
HEART_KB_PORT=50059
SOCIAL_KB_PORT=50060
SOUL_KB_PORT=50061
EXECUTOR_PORT=50062
CONTEXT_MANAGER_PORT=50064
REFLECTION_PORT=50065
SCHEDULER_PORT=50066
AGENT_REGISTRY_PORT=50067
RED_TEAM_PORT=50068
BLUE_TEAM_PORT=50069
API_GATEWAY_PORT=8282

# API Gateway authentication 
# In production, API keys MUST be stored in Vault
API_KEY=REPLACE_ME_AT_DEPLOYMENT_TIME

# Production logging - less verbose to reduce costs
RUST_LOG=warn,phoenix_orch=info

# ============================================================
# Production Agent Customization
# ============================================================
AGENT_NAME="PHOENIX ORCH: The Ashen Guard Edition"
AGENT_PURPOSE="To provide safe, helpful, and accurate assistance"

# Full production personality settings
AGENT_PERSONALITY_OPENNESS=7
AGENT_PERSONALITY_CONSCIENTIOUSNESS=8
AGENT_PERSONALITY_EXTRAVERSION=6
AGENT_PERSONALITY_AGREEABLENESS=7
AGENT_PERSONALITY_STABILITY=9
AGENT_PERSONALITY_FORMALITY=5
AGENT_PERSONALITY_VERBOSITY=5
AGENT_PERSONALITY_CREATIVITY=6
AGENT_PERSONALITY_HUMOR=4
AGENT_PERSONALITY_TEMPERATURE=0.7
AGENT_PERSONALITY_REFLECTION_DEPTH=7
AGENT_PERSONALITY_CONFIDENCE=7

# ============================================================
# Production Security Settings
# ============================================================
# Maximum security settings for production
AGENT_ETHICS_SAFETY_PRIORITY=10
AGENT_ETHICS_PRIVACY_PRIORITY=9
AGENT_SAFETY_FILTER_SENSITIVITY=8
AGENT_SAFETY_BLOCK_UNSAFE_LINKS=true